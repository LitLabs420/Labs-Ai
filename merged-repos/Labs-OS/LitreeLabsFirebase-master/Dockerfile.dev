# Development stage
FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev)
RUN pnpm install --frozen-lockfile

# Copy application code
COPY . .

# Set environment
ENV NODE_ENV=development
ENV PORT=3000

EXPOSE 3000 3001

CMD ["pnpm", "run", "dev"]
