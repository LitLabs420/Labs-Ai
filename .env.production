# Production Environment - Vercel
# These are overridden by Vercel Environment Variables for security

# Application
NEXT_PUBLIC_APP_NAME=LitReeLab Studio
NEXT_PUBLIC_APP_URL=https://litreelabstudio.vercel.app
NEXT_PUBLIC_API_URL=https://litreelabstudio.vercel.app/api

# Supabase Database (Production)
# Set these in Vercel dashboard environment variables
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PRODUCTION_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY_HERE

# Stripe Keys (Production)
# Set these in Vercel dashboard environment variables
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY

# Enable production features
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Analytics & Monitoring
NEXT_PUBLIC_SENTRY_ENABLED=true
NEXT_PUBLIC_VERCEL_ENV=production

# Security
SECURE_COOKIES=true
SAME_SITE=Strict
