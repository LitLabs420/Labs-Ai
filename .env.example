# ============================================
# LITLABS ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this to .env.local and fill in real values
# Never commit .env.local - it's in .gitignore

# ============================================
# FIREBASE CLIENT (Required)
# ============================================
# Get these from: https://console.firebase.google.com
# Project Settings → General → Your apps → Web app config
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abc123def456

# ============================================
# ADMIN CREDENTIALS (Required)
# ============================================
# Your admin user UID (find in Firebase Console → Authentication)
NEXT_PUBLIC_ADMIN_UID=your_admin_uid_from_firebase
# Your admin email
NEXT_PUBLIC_ADMIN_EMAIL=your_email@example.com

# ============================================
# STRIPE (Required for payments)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Price IDs from Products page in Stripe Dashboard
STRIPE_PRICE_GROWTH=price_your_growth_price_id
STRIPE_PRICE_GODMODE=price_your_godmode_price_id
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# AI SERVICES (Required for AI features)
# ============================================
# OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here
# Google AI Studio key from: https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key_here

# ============================================
# EMAIL SERVICE (Optional - for transactional emails)
# ============================================
# Resend API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_key_here

# ============================================
# RECAPTCHA (Optional - for demo form spam protection)
# ============================================
# Get from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# ============================================
# DEPLOYMENT (Production only)
# ============================================
# Your production URL (e.g., https://litlabs-web.vercel.app)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# GOOGLE CLOUD (Optional - for BigQuery analytics)
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json
GCP_BIGQUERY_DATASET=your_dataset_name
ENABLE_SERVER_LOGS=true

# ============================================
# FIREBASE APP CHECK (Optional - for security)
# ============================================
# Set to 'true' in dev only to get debug token
NEXT_PUBLIC_FIREBASE_APPCHECK_DEBUG_TOKEN=false
