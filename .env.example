# ============================================
# LITLABS MVP - Environment Variables
# AI Content Generation Platform
# ============================================

# ============================================
# DATABASE - Supabase (Required)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# AI PROVIDERS (At least one required)
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google Gemini (Optional)
GOOGLE_AI_API_KEY=your_google_ai_key

# ============================================
# PAYMENTS - Stripe (Required for Pro features)
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Price IDs for each tier
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_CREATOR_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# ============================================
# NEXT.JS CONFIG
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# SECURITY (Generate random strings)
# ============================================
JWT_SECRET=your_random_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# ============================================
# OPTIONAL - Analytics & Monitoring
# ============================================
# PostHog (Optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Sentry (Optional)
SENTRY_DSN=

# ============================================
# RATE LIMITING
# ============================================
# Redis for rate limiting (optional, uses memory if not set)
REDIS_URL=

# ============================================
# TIER LIMITS (Requests per month)
# ============================================
TIER_FREE_LIMIT=10
TIER_STARTER_LIMIT=100
TIER_CREATOR_LIMIT=500
TIER_PRO_LIMIT=2000
