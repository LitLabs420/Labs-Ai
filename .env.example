# Firebase Configuration (Get these from your Firebase Console)
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_DATABASE_URL=your_database_url_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here

# Stripe (Get from Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_publishable_key_here
STRIPE_SECRET_KEY=your_secret_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Internal Security
INTERNAL_WEBHOOK_SECRET=your-random-secret-here-generate-with-openssl-rand-hex-32

# Google AI (Optional)
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your_google_ai_key_here

# Other APIs
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=LitReeLab Studio
NEXT_PUBLIC_APP_URL=http://localhost:3000
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=your_tenant_id_here
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/auth/callback/microsoft

# Microsoft 365 Graph API
NEXT_PUBLIC_MICROSOFT_GRAPH_API=https://graph.microsoft.com/v1.0

# PREMIUM AI INTEGRATIONS

# Claude (Anthropic) - Best for text generation
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Replicate - Best for image/video generation (FLUX, Stable Diffusion)
REPLICATE_API_TOKEN=your_replicate_token_here

# ElevenLabs - Best for voice/audio generation
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# DATABASE & CACHING

# PostgreSQL (via Prisma) - for complex queries and data
DATABASE_URL=postgresql://user:password@localhost:5432/litlabs

# Redis - for caching, real-time, rate limiting
REDIS_URL=redis://localhost:6379

# Supabase (Alternative to Firebase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# MONITORING & ANALYTICS

# PostHog - for user analytics and feature flags
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.posthog.com

# LogRocket - for session recording and error tracking
NEXT_PUBLIC_LOGROCKET_ID=your_logrocket_id_here

# OpenTelemetry - for distributed tracing
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# INTEGRATIONS & WEBHOOKS

# Make.com (formerly Integromat) - for automation
MAKE_WEBHOOK_URL=your_make_webhook_url_here

# Zapier - for workflow automation
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here

# FEATURE FLAGS & SECURITY

# Feature flags for A/B testing
NEXT_PUBLIC_FEATURE_AI_BETA=false
NEXT_PUBLIC_FEATURE_VIDEO_GENERATION=false
NEXT_PUBLIC_FEATURE_MARKETPLACE=false

# Rate limiting config
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

